{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/renderer/src/**/*.module.css",
    "src\\renderer\\src\\**\\*.module.css",
    "@renderer/**/*.module.css",
    "src/**/*.module.css",
    // "./src/**/*.module.css",
    // "**/*.module.css",
    "c:\\Users\\Pglenn\\Desktop\\upc-app2\\src\\renderer\\src\\**\\*",
  ],
  "files": [
  ],
  "compilerOptions": {
    "composite": true,
    "jsxImportSource": "solid-js",
    "plugins": [{ 
      "name": "typescript-plugin-css-modules", 
      "options": {
        "classnameTransform": "camelCase",
        "goToDefinition": true,
        "customTemplate": "./cssModuleTemplate.cjs",
      } 
    }],
    "types": [
      "unplugin-icons/types/solid",
    ],
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "#preload": [
        "src/preload/index.mjs"
      ]
    }
  }
}
